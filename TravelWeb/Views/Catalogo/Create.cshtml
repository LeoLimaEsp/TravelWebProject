@model TravelWeb.Models.CatalogoCiudadModel

@{
    ViewData["Title"] = "Create";
}
<body class="img">
</body>
<style>
    .hover-effect:hover {
        opacity: 0.6;
    }

    .img {
        background-image: url(https://img.freepik.com/foto-gratis/fondo-producto-minimo-gris_53876-147756.jpg);
        background-size: cover;
    }
</style>

<h1>Nueva Ciudad <i class="fa-sharp fa-solid fa-city"></i> </h1>
<p>Ingrese los datos para crear la nueva ciudad destino:</p>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Temperatura" class="control-label"></label>
                <input asp-for="Temperatura" class="form-control" />
                <span asp-validation-for="Temperatura" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Crear cuidad" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a class=" btn btn-outline-secondary btn-sm link-secondary link-offset-2 link-underline-opacity-0" asp-action="Index"> Regresar a la lista de ciudades</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
