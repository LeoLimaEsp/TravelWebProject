@model TravelWeb.Models.VentaModel

@{
    ViewData["Title"] = "Create";
}
<body class="img">
</body>
<style>
    .hover-effect:hover {
        opacity: 0.6;
    }

    .img {
        background-image: url(https://img.freepik.com/foto-gratis/fondo-producto-minimo-gris_53876-147756.jpg);
        background-size: cover;
    }
</style>

<h1>Nueva compra <i class="fa-solid fa-cart-shopping"></i> </h1>

<h4>Escoge entre las ciudades disponibles:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Viajes existente:</label>
                @Html.DropDownListFor( m=>m.Viaje_ID, Model.Viajes, "Seleccionar viaje existente:", new { @class = "form-select" })
                <span asp-validation-for="Viaje_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Clientes existentes:</label>
                @Html.DropDownListFor( m=>m.Cliente_ID, Model.Clientes, "Seleccionar cliente existente:", new { @class = "form-select" })
                <span asp-validation-for="Cliente_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Comprar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a class=" btn btn-outline-secondary btn-sm link-secondary link-offset-2 link-underline-opacity-0" asp-action="Index">Regresar a la lista de compras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
